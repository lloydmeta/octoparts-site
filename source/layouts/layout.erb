    <a href="https://github.com/m3dev/octoparts"><img style="position: absolute; top: 0; right: 0; border: 0; z-index: 100" src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png"></a>

    <div class="container">
      <div class="row">

        <div class="col-md-3">
          <div id="sidebar">
            <div class="sidebar-logo">
              <% link_to '/index.html' do %>
                  <%= image_tag 'octo_logo1.png', :width => '220px' %>
              <% end %>
            </div>

            <ul class="nav nav-pills nav-stacked">
            <% sitemap.where(:nav_order.gte => 0).order_by(:nav_order).all.each { |page| %>
              <li <%= "class='active'" if page.data.title == current_page.data.title %>><%= link_to page.data.title, page.url %></a></li>
            <% } %>
            </ul>
          </div>
        </div>

        <div class="col-md-9">
          <h1><%= current_page.data.title || "" %></h1>
          <%= yield %>
        </div>

      </div>
    </div>

    <footer class="site-footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h4>Made by M3</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <ul class="list-inline site-footer-link-list">
                <li>
                  <%= link_to "GitHub repo", "https://github.com/m3dev/octoparts"  %>
                </li>
                <li>
                  <%= link_to "M3Dev", "http://m3dev.github.io/"  %>
                </li>
                <li>
                  <%= link_to "We're hiring!", "http://at.m3.com/job" %>
                </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.8.0.min.js"><\/script>')</script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>

